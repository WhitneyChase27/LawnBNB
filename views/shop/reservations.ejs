<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (reservations.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% reservations.forEach(reservation => { %>
                        <li class="orders__item">
                            <h1>Reservation - # <%= reservation._id %> - <a href="/reservations/<%= reservation._id %>">Invoice</a></h1>
                            <ul class="orders__products">
                                <% reservation.lawns.forEach(l => { %>
                                    <li class="orders__products-item"><%= l.lawn.town %> (<%= l.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>