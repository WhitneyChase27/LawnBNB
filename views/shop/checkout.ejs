<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <div class="filler"></div>
            <ul class="cart__item-list">
                <% lawns.forEach(l => { %>
                    <li class="cart__item">
                        <h1><%= l.lawnId.title %></h1>
                        <h2>Quantity: <%= l.quantity %></h2>
                    </li>
                <% }) %>
            </ul>
            <div class="centered">
                <h2>Total: <%= totalSum %></h2>
            </div>
            <div class="centered">
                <button id="order-btn" class="btn">RESERVATION</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51HtljjDVfnTF4SG7C0rfC3QJqxvXtnYni1gGERgPlaR5k4LE0BuYSodQoQDgJjORpqvy821XS3exnr6ucs3CMg7X00oxDQjJQP');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function() {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    });
                </script>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>