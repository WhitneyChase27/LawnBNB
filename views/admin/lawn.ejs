<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <div class="filler"></div>
                <% if (laws.length > 0) { %>
                    <div class="grid">
                        <% for (let lawn of laws) { %>
                            <article class="card product-item">
                                <div class = "card__content">
                                    <header class="card__header">
                                        <h1 class="product__title">
                                            <%= lawn.town %>
                                        </h1>
                                        <span class="product__price">$
                                            <%= lawn.price %>
                                        </span>
                                        <hr />
                                    </header>
                                    <div class="image">
                                        <img src="/<%= lawn.imageUrl %>" alt="<%= lawn.title %>">
                                    </div>
                                    <p class="product__description">
                                        <%= lawn.description %>
                                    </p>
                                    <div class="product__actions">
                                        <a href="/admin/edit-lawn/<%= lawn._id %>?edit=true" class="btn">Edit</a>
                                        <input type="hidden" value="<%= lawn._id %>" name="lawnId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn" type="button" onclick="deleteLawn(this)">Delete</button>
                                        <a href="/admin/lawn-management/<%= lawn._id %>?edit=true" class="btn">Details</a>
                                        <!-- <% if (isAuthenticated) { %>
                                            <%- include('./lawn-management.ejs', {lawn: lawn}) %>
                                        <% } %> -->
                                    </div>
                                </div>
                           
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Lawns Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>

            