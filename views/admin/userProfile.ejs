<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/lawn.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        
            <main>
                <div class="form-control">
                    <label for="image">Image</label>
                    <input 
                        type="file" 
                        name="image" 
                        id="image" >
                </div>
                <% if (reservations.length <= 0) { %>
                    <h1>Nothing there!</h1>
                <% } else { %>
                    <ul class="orders">
                        <% reservations.forEach(reservation => { %>
                            <li class="orders__item">
                                <h1>Reservation - # <%= order._id %> - <a href="/reservations/<%= reservation._id %>">Invoice</a></h1>
                                <ul class="orders__products">
                                    <% reservation.lawns.forEach(l => { %>
                                        <li class="orders__products-item"><%= l.lawn.title %> (<%= l.quantity %>)</li>
                                    <% }); %>
                                </ul>
                            </li>
                        <% }); %>
                    </ul>
                <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>