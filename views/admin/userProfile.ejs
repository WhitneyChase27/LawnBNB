<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/lawn.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        
            <main>
                <div class="form-control">
                    <label for="image">Image</label>
                    <input 
                        type="file" 
                        name="image" 
                        id="image" >
                </div>

                <h1>
                    My Profile
                </h1>

                <div>
                    <h2>Address: </h2>
                    <h3><%= user.address%></h3>
                </div>
                <form action="/admin/EditProfileAddress" method="POST">
                    <input type="text" name="address">
                    <button class="btn" type="submit">Update Address</button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form>

                <br/>
                <h2>Change Password: </h2>
                <form action="/admin/EditProfilePassword" method="POST">
                    <input type="text" name="password">
                    <button class="btn" type="submit">Change</button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form>

                <div>
                    <%= user.email%> 
                </div>

                <h2>My Reservations: </h2>

                <% if (reservations.length <= 0) { %>
                    <h3>Nothing scheduled</h3>
                <% } else { %>
                    <ul class="orders">
                        <% reservations.forEach(reservation => { %>
                            <li class="orders__item">
                                <h1>Reservation - # <%= reservation._id %> - <a href="/reservations/<%= reservation._id %>">Invoice</a></h1>
                                <ul class="orders__products">
                                    <% reservation.lawns.forEach(l => { %>
                                        <li class="orders__products-item"><%= l.lawn.town %> (<%= l.quantity %>)</li>
                                    <% }); %>
                                </ul>
                            </li>
                        <% }); %>
                    </ul>
                <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>